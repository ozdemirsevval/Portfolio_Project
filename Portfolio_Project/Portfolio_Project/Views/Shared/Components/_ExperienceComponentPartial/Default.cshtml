@model List<Portfolio_Project.Data_Access_Layer.Entities.Experience>

@{
    int count = 0;
}

<div class="row about-content about-content--timeline">

    <div class="col-full text-center">
        <h3>My Work Experience.</h3>
    </div>


    @foreach (var item in Model)
    {
        count++;
        <div class="col-six tab-full left">
            <div class="timeline">
                <div class="timeline__block">
                    <div class="timeline__bullet"></div>
                    <div class="timeline__header">
                        <p class="timeline__timeframe">@item.ExperienceDateTime</p>
                        <h3>@item.ExperienceHeadline</h3>
                        <h5>@item.ExperienceTitle</h5>
                    </div>
                    <div class="timeline__desc">
                        <p>@item.ExperienceDescription</p>
                    </div>
                </div>
            </div>
        </div>
    }
</div>


