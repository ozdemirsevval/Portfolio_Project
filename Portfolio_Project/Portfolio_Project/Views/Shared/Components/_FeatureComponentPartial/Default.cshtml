@model List<Portfolio_Project.Data_Access_Layer.Entities.Feature>

<section id="home" class="s-home page-hero target-section" data-parallax="scroll" data-image-src="images/hero-bg.jpg" data-natural-width=3000 data-natural-height=2000 data-position-y=center>

    <div class="overlay"></div>
    <div class="shadow-overlay"></div>

    @foreach(var item in Model)
    {
        <div class="home-content">

            <div class="row home-content__main">

                <h3>@item.FeatureTitle</h3>

                <h1>
                    @*I am Jonathan Doe. <br>
                    I am a graphic & UI/UX <br>
                    designer based in Somewhere.*@
                    @item.FeatureDescription
                </h1>

                <div class="home-content__buttons">
                    <a href="#works" class="smoothscroll btn btn--stroke">
                        Latest Projects
                    </a>
                    <a href="#about" class="smoothscroll btn btn--stroke">
                        More About Me
                    </a>
                </div>

                <div class="home-content__scroll">
                    <a href="#about" class="scroll-link smoothscroll">
                        <span>Scroll Down</span>
                    </a>
                </div>

            </div>

        </div> 
    }

    <ul class="home-social">
        <li>
            <a href="https://www.linkedin.com/in/sevval-ozdemir/" target="_blank"><i class="im im-linkedin" aria-hidden="true"></i><span>LinkedIn</span></a>
        </li>
        <li>
            <a href="https://github.com/ozdemirsevval" target="_blank"><i class="im im-github" aria-hidden="true"></i><span>GitHub</span></a>
        </li>
        <li>
            <a href="https://medium.com/sevvalozdemir.tech" target="_blank"><i class="im im-discord" aria-hidden="true"></i><span>Medium</span></a>
        </li>
    </ul>
    <!-- end home-social -->

</section>
